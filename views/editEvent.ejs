<!DOCTYPE html>
<html>
<head>
  <title>Edit Event</title>
</head>
<body>
  <h1>Edit Event</h1>
  <form action="/events/edit/<%= event._id %>" method="POST">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="<%= event.title %>" required><br>
    <label for="description">Description:</label>
    <textarea id="description" name="description"><%= event.description %></textarea><br>
    <label for="date">Date and Time:</label>
    <input type="datetime-local" id="date" name="date" value="<%= moment(event.date).format('YYYY-MM-DDTHH:mm') %>" required><br>
    <button type="submit">Update</button>
  </form>
  <a href="/events">Cancel</a>
</body>
</html>